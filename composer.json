{
  "name": "ilhamsj/wordpress-modern",
  "description": "WordPress with Composer",
  "autoload": {
    "psr-4": {
      "Ilhamsj\\Wordpress\\": "src/"
    }
  },
  "authors": [
    {
      "name": "ilhamsj",
      "email": "ilhamsaputrajati@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "johnpbloch/wordpress-core-installer": true,
      "composer/installers": true,
      "php-http/discovery": true
    }
  },
  "extra": {
    "wordpress-install-dir": "public/wordpress",
    "installer-paths": {
      "public/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "public/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "git",
      "url": "https://github.com/wp-graphql/wp-graphql-jwt-authentication.git"
    },
    {
      "type": "git",
      "url": "https://github.com/ilhamsj/wordpress-custom-theme.git"
    },
    {
      "type": "git",
      "url": "https://github.com/ilhamsj/wordpress-meilisearch.git"
    }
  ],
  "require": {
    "johnpbloch/wordpress-core-installer": "^2.0",
    "johnpbloch/wordpress-core": "^6",
    "vlucas/phpdotenv": "*",
    "ilhamsj/wordpress-custom-theme": "dev-master",
    "ilhamsj/wordpress-meilisearch": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*"
  }
}
